@model List<ManagerDesk.ViewModels.SelectedDishListViewModel>

@foreach (var cat in Model)
{
    if (string.IsNullOrEmpty(cat.Category))
    {
        <h3 class="info-item-heading">Без категории</h3>
    }
    else
    {
        <h3 class="info-item-heading">@cat.Category</h3>
    }

    foreach (var dish in cat.Dishes)
    {
        <li><a href="#" class="@dish.SelectedStyle js-dish-drop" data-id="@dish.Id"><i class="fa fa-check" aria-hidden="true" @dish.SelectedIcoStyle></i> @dish.Name </a></li>
    }
}
<li><span href="#" class="btn btn-save-dishes js-renew-menu" data-target="@Url.Action("EditMenuDishes","Manager")">Сохранить</span></li>