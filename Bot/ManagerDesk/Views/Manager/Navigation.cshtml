@using ManagerDesk.ViewModels
@model NavigationViewModel
<nav class="navbar-left">
    <div class="profile-item">
        @if (!string.IsNullOrEmpty(Model.UserPicPath))
        {
            <img alt="image" class="img-circle" src="@Url.Content(Model.UserPicPath)">
        }
        else
        {
            <img alt="image" class="img-circle" src="@Url.Content("empty-profile-img.png")">
        }

        @if (!string.IsNullOrEmpty(Model.OrgName))
        {
            <div class="profile-item__name">@Model.OrgName</div>
        }
        else
        {
            <div class="profile-item__name">Название компании</div>
        }
    </div>
    <ul class="menu">
        <li class="active-item"><a href="#" class="menu-section js-tables-section active" data-target="@Url.Action("AllTables","Manager")" data-type="Table"><i class="fa fa-id-card-o"></i>Столики</a></li>
        <li><a href="#" class="menu-section js-rest-section" data-target="@Url.Action("AllRestaurants","Manager")" ><i class="fa fa-file-text"></i>Рестораны </a><a href="#" class="toolbar-add pull-right js-add-plus" data-target="@Url.Action("Add","Manager")" data-type="Restaurant"><i class="fa fa-plus" aria-hidden="true"></i></a></li>
        <li><a href="#" class="menu-section js-menu-section" data-target="@Url.Action("AllMenus","Manager")"><i class="fa fa-file-text"></i>Меню</a><a href="#" class="toolbar-add pull-right js-add-plus" data-target="@Url.Action("Add","Manager")" data-type="Menu"><i class="fa fa-plus" aria-hidden="true"></i></a></li>
        <li><a href="#" class="menu-section js-dish-section" data-target="@Url.Action("AllDishes","Manager")"><i class="fa fa-cutlery"></i>Блюда</a><a href="#" class="toolbar-add pull-right js-add-plus" data-target="@Url.Action("Add","Manager")" data-type="Dish"><i class="fa fa-plus" aria-hidden="true"></i></a></li>
    </ul>
</nav>
<script src="@Url.Content("~/Assets/Scripts/navigation.js")" type="text/javascript"></script>